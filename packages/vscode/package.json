{
  "name": "docker-diary-vscode",
  "displayName": "docker-diary",
  "publisher": "jonrad",
  "description": "",
  "repository": "https://github.com/jonrad/docker-diary",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.47.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:docker-diary.runForWorkspace",
    "onCommand:docker-diary.runForFile"
  ],
  "main": "./build/extension.js",
  "contributes": {
    "configuration": [
      {
        "title": "Docker Diary",
        "properties": {
          "docker-diary.docker": {
            "type": "string",
            "default": "",
            "description": "Path to docker binary"
          }
        }
      }
    ],
    "commands": [
      {
        "command": "docker-diary.runForWorkspace",
        "title": "Docker Diary"
      },
      {
        "command": "docker-diary.runForFile",
        "title": "Docker Diary"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "docker-diary.runForFile",
          "when": "false"
        }
      ],
      "explorer/context": [
        {
          "command": "docker-diary.runForFile",
          "when": "resourceFilename == Dockerfile || resourceFilename =~ /\\.Dockerfile$/"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run build",
    "build": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run build && yarn run lint",
    "test": "node ./build/test/runTest.js",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/glob": "^7.1.1",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.11.0",
    "@types/vscode": "^1.47.0",
    "@typescript-eslint/eslint-plugin": "^2.30.0",
    "@typescript-eslint/parser": "^2.30.0",
    "eslint": "^6.8.0",
    "glob": "^7.1.6",
    "mocha": "^7.1.2",
    "vscode-test": "^1.3.0",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "docker-diary-lib": "^1.0.0",
    "tslib": "^2.1.0"
  }
}
